{
  "name": "teapub",
  "version": "1.0.1",
  "description": "generate epubs using typescript and preact",
  "keywords": [
    "preact",
    "epub",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erikbrinkman/teapub.git"
  },
  "author": {
    "name": "Erik Brinkman",
    "email": "erik.brinkman@gmail.com"
  },
  "license": "MIT",
  "types": "dist/index.d.ts",
  "module": "bundle/teapub.esm.min.js",
  "main": "bundle/teapub.cjs.min.js",
  "unpkg": "bundle/teapub.iife.min.js",
  "files": [
    "bundle/*.js",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "fmt": "prettier --cache --write 'src/**/*.{ts,tsx}' '*.json' bundle.mjs",
    "lint": "pnpify tsc && eslint --cache 'src/**/*.{ts,tsx}' && pnpify typedoc --emit none",
    "test": "jest --coverage",
    "doc": "pnpify typedoc",
    "build": "pnpify tsc -p tsconfig.build.json",
    "bundle": "node bundle.mjs",
    "prepack": "yarn lint && yarn test && yarn build && yarn bundle"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "parse5": "^7.1.1",
    "preact": "^10.11.1",
    "preact-render-to-string": "^5.2.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/types": "^7.19.3",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/sharp": "^0.31.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "@yarnpkg/pnpify": "^4.0.0-rc.22",
    "babel-jest": "^29.1.2",
    "chalk": "5.1.0",
    "esbuild": "^0.15.10",
    "esbuild-plugin-ignore": "^1.1.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.1.2",
    "lorem-ipsum": "^2.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "sharp": "^0.31.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "resolutions": {
    "minimist": "1.2.6"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/transform-react-jsx",
        {
          "runtime": "automatic",
          "importSource": "preact",
          "throwIfNamespace": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "env": {
      "node": true
    },
    "rules": {
      "tsdoc/syntax": "error",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_+$"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "accesskey",
            "basefont",
            "blockquote",
            "charset",
            "colgroup",
            "colspan",
            "contenteditable",
            "contextmenu",
            "dcterms",
            "dropzone",
            "dtbncx",
            "epub",
            "href",
            "hreflang",
            "iframe",
            "iife",
            "inlist",
            "itemid",
            "itemref",
            "itemscope",
            "itemtype",
            "jpeg",
            "lang",
            "latin",
            "noscript",
            "oebps",
            "opendocument",
            "opentype",
            "preact",
            "rowspan",
            "samp",
            "tabindex",
            "tbody",
            "teapub",
            "tfoot",
            "thead",
            "typeof",
            "xhtml",
            "xmlns"
          ],
          "minLength": 4
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.4"
}
